<?xml version="1.0"?>
<launch>
    <arg name="tf_prefix" value="$(eval optenv('ROS_NAMESPACE') + '/' if optenv('ROS_NAMESPACE') !=  '' else '')"/>
    <arg name="sim" default="false"/>
    <arg name="sim_ns" default="/" doc="namespace for gazebo plugins" />
    <arg name="fake_walk" default="False" doc="fake walk controller for simulation" />
    <arg name="use_darwin" default="False" doc="Use Darwin_OP instead of wolfgang" />

    <group if="$(arg use_darwin)">
        <param name="robot_description" command="$(find xacro)/xacro $(find darwin_description)/urdf/robot.urdf" />
        <param name="urdf" value="$(find darwin_description)/urdf/robot.urdf" />
        <param name="robot_description_semantic" textfile="$(find darwin_moveit_config)/config/darwin.srdf" />
        <param name="robot_type_name" value="Darwin"/>
        <group ns="robot_description_planning">
            <rosparam command="load" file="$(find darwin_moveit_config)/config/joint_limits.yaml"/>
        </group>
        <group ns="robot_description_kinematics">
            <rosparam command="load" file="$(find darwin_moveit_config)/config/kinematics.yaml"/>
        </group>
    </group>

    <group unless="$(arg use_darwin)">
        <param name="robot_description" command="$(find xacro)/xacro $(find wolfgang_description)/urdf/robot.urdf use_fake_walk:=$(arg fake_walk) sim_ns:=$(arg sim_ns)" />
        <param name="urdf" value="$(find wolfgang_description)/urdf/robot.urdf" />
        <param name="robot_description_semantic" textfile="$(find wolfgang_moveit_config)/config/wolfgang.srdf" />
        <param name="robot_type_name" value="Wolfgang"/>
        <!-- Load updated joint limits (override information from URDF) -->
        <group ns="robot_description_planning">
            <rosparam command="load" file="$(find wolfgang_moveit_config)/config/joint_limits.yaml"/>
        </group>
        <!-- Load default settings for kinematics; these settings are overridden by settings in a node's namespace -->
        <group ns="robot_description_kinematics">
            <rosparam command="load" file="$(find wolfgang_moveit_config)/config/kinematics.yaml"/>
        </group>
    </group>

    <!-- publish tfs, change topic depending if the simulation is used -->
    <node name="robot_state_publisher" pkg="robot_state_publisher" type="robot_state_publisher" respawn="false" output="screen">
        <param name="tf_prefix" value="$(optenv ROS_NAMESPACE)"/>
        <param name="prefix_tf_with" value="$(optenv ROS_NAMESPACE)/"/>
    </node>
    <param name="simulation_active" value="$(arg sim)"/>
    <param name="/use_sim_time" value="$(arg sim)"/>

    <include file="$(find humanoid_base_footprint)/launch/base_footprint.launch"/>

    <group unless="$(arg fake_walk)">
        <include file="$(find bitbots_odometry)/launch/odometry.launch"/>
    </group>

    <include file="$(find bitbots_convenience_frames)/launch/convenience_frames.launch"/>
</launch>
